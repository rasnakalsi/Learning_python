import tkinter as tk
from tkinter import messagebox


def about_app():
    messagebox.showinfo("App","The Application\n that does nothing")

def are_you_sure(event=None):
    if messagebox.askyesno("","Are you sure you want to quit app"):
        window.destroy()

def open_file():
    messagebox.showinfo("Ã–pen doc","We will open a file here")


window=tk.Tk()

main_menu=tk.Menu(window)
window.config(menu=main_menu)

#sub_menu_file=tk.Menu(main_menu)
# To hide the tear off line i.e. "---" line displayed when we click File menu or any other menu option :)
sub_menu_file=tk.Menu(main_menu,tearoff=0)
#main_menu.add_cascade(label="File",menu=sub_menu_file)
##Adding Alt-F as hot key
#Adding file submenu under main menu
main_menu.add_cascade(label="File",menu=sub_menu_file,underline=0)
##adding a submenu under file tab

sub_menu_file.add_command(label="Open",command=open_file)
## the line given below adds a horizontal line b/w "Open" and "Quit" menu items
sub_sub_menu_file=tk.Menu(sub_menu_file,tearoff=0)
sub_menu_file.add_cascade(label="Open Recent file..",menu=sub_sub_menu_file)
for i in range(8):
    number=str(i+1)
    sub_sub_menu_file.add_command(label=number+". file.txt",underline=0)


sub_menu_file.add_separator()
#sub_menu_file.add_command(label="Quit",command=are_you_sure)
#To add hot key to a menu item,via accelerator option
sub_menu_file.add_command(label="Quit",command=are_you_sure,accelerator="Ctrl-Q")

sub_menu_help=tk.Menu(main_menu,tearoff=0)
main_menu.add_cascade(label="Help",menu=sub_menu_help)
#main_menu.add_command(label="About",command=about_app)
#Add "b" of "About" as hot key
main_menu.add_command(label="Fbout",command=about_app,underline=0)

#Using the global linking
window.bind_all("<Control-q>",are_you_sure)
window.mainloop()