import tkinter as tk
from tkinter import messagebox
count=0

def click(event=None):
    if event is None:
        global count
        count+=1
        if count==5:
            messagebox.showinfo("Destroying window")
            window.destroy()
        else:
            tk.messagebox.showinfo("Clicks!!","I Love Clicks!!")

    else:
        msg="x="+str(event.x)+", y="+str(event.y)+",num="+str(event.num)+",type="+event.type
        messagebox.showinfo("Click",msg)
    
window=tk.Tk()

label=tk.Label(window,text="Label")
label.bind("<Button-1>",click)
label.pack()

button=tk.Button(window,text="Button",command=click)
button.pack(fill=tk.X)

frame=tk.Frame(window,width=30,height=100,bg="#55BF00")
frame.bind("<Button-1>",click)
frame.pack()

#button.config(command=lambda:None)

window.mainloop()