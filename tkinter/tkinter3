import tkinter as tk
window=tk.Tk()
#button_1=tk.Button(window,text="Button #1",bg="red",fg="yellow",activebackground="green",activeforeground="blue")
button_1=tk.Button(window,text="Button #1",bg="#FF0000",fg="#00FF00",
                     activebackground="#FFFFFF",activeforeground="#000000")
button_1.pack()
window.mainloop()