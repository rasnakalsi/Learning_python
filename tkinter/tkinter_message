import tkinter as tk

def do_it_again():
    text.set(text.get()+" and again...")

def reset_mb():
    text.set("You did it again after (Reset)")

window=tk.Tk()

button=tk.Button(window,text="Go ahead!",command=do_it_again)
button.pack()

button2=tk.Button(window,text="Reset message box",command=reset_mb)
button2.pack()

text=tk.StringVar()

message=tk.Label(window,textvariable=text,width=600)
text.set("You did it again!!")
message.pack()

window.mainloop()