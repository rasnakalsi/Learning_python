import tkinter as tk

window=tk.Tk()

button_1=tk.Button(window,text="Ordinary Button")
button_1.pack()

button_2=tk.Button(window,text="Exceptional Button")
button_2.pack()
button_2["borderwidth"]=10
button_2["highlightthickness"]=10
button_2["padx"]=10
button_2["pady"]=5
button_2["underline"]=-1
button_2["height"]=15
button_2["width"]=30
button_2["wraplength"]=20
entry=tk.Entry(window,width=100)
entry.pack()
window.mainloop()