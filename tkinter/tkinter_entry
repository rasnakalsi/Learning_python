import tkinter as tk

def digits_only(*args):
    global last_string
    string=text.get()
    if string=="" or string.isdigit():  ## only digits or empty strings are allowed in this field
        last_string=string
        text.set(last_string)
        print("inside if block")

    else:
        if last_string=="":
            text.set("Hello Rasna!!")
        else:
            text.set(last_string)
        print("inside else block")



last_string=""
window=tk.Tk()
text=tk.StringVar()
entry=tk.Entry(window,width=200,textvariable=text)
text.set(last_string)
text.trace_add("write",digits_only)
entry.pack()
entry.focus_set()

window.mainloop()