import tkinter as tk
from tkinter import messagebox

def switch():
    if button_1.cget("state")==tk.DISABLED:
        button_1.config(state=tk.NORMAL)
        button_1.flash()
    else:
        button_1.config(state=tk.DISABLED)
        button_1.flash()


def mouseover(ev):
    button_1["bg"]="green"

def mouseout(ev):
    button_1["bg"]="red"

def hello(event=None):
    messagebox.showinfo("Button Clicked!!","You have clicked the button")

window=tk.Tk()

button_1=tk.Button(window,text="Enabled",bg="red",command=hello)

button_1.bind("<Enter>",mouseover)
button_1.bind("<Leave>",mouseout)

button_1.pack()

button_2=tk.Button(window,text="Enable/Disable",command=switch)
button_2.pack()

window.mainloop()
