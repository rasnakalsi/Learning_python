import tkinter as tk
from tkinter import messagebox

# def clicked():
#     messagebox.showinfo("Info","Hi Rasna \nShow\ninfo")

# window=tk.Tk()
# button_1=tk.Button(window,text="Show info",command=clicked)
# button_1.pack()

# button_2=tk.Button(window,text="Quit",command=window.destroy)
# button_2.pack()

# window.mainloop()

def click(event=None):
    messagebox.showinfo("Clicked!!", "I love clicks!!")

def doubleclick(event=None):
    messagebox.showinfo("Double Clicked!!", "I love double clicks!!")

def leftakey(event=None):
    messagebox.showinfo("An event occured",event)

window=tk.Tk()

label=tk.Label(window,text="Label")
label.bind("<Double Button-1>",doubleclick)
label.bind("<Button-1>",click)
label.pack()

button=tk.Button(window,text="Button",command=doubleclick)
button.pack()

#frame=tk.Frame(window,width=100,height=50,bg="#55BF40")
frame=tk.Entry(window,width=100)
frame.bind("<Caps_Lock>",leftakey)
frame.bind("<Double Button-1>",doubleclick)
frame.pack()

window.mainloop()
