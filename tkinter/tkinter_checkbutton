import tkinter as tk 
from tkinter import messagebox
from typing import Counter

def count():
    global counter 
    counter+=1

def show():
    checkbutton.toggle()
    
    #global counter
    #messagebox.showinfo("Checkbutton statistics","No of state changed = "+str(counter)+"\n Current state of checkbox= "+\
    #    str(switch.get()))

    # for i in range(4):
    #     checkbutton.invoke()

    # messagebox.showinfo("",str(switch.get()))
    #counter=0

window=tk.Tk()
switch=tk.IntVar()
counter=0

button=tk.Button(window,text="Show",command=show)
button.pack()

checkbutton=tk.Checkbutton(window,text="Tick",command=count,variable=switch)


checkbutton.pack()

window.mainloop()